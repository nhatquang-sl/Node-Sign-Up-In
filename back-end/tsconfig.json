{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@config": [
        "config"
      ],
      "@config/*": [
        "config/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@database": [
        "database"
      ],
      "@database/*": [
        "database/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@libs/*": [
        "../front-end/src/shared/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}